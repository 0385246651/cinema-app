{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['uid', 'email', 'createdAt'])"
      }
    },
    
    "watchHistory": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "$movieKey": {
          ".validate": "newData.hasChildren(['movieSlug', 'movieName', 'watchedAt'])"
        }
      }
    },
    
    "favorites": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "$movieSlug": {
          ".validate": "newData.hasChildren(['movieSlug', 'movieName', 'addedAt'])"
        }
      }
    },
    
    "ratings": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid",
        "$movieSlug": {
          ".validate": "newData.hasChildren(['movieSlug', 'rating']) && newData.child('rating').val() >= 1 && newData.child('rating').val() <= 5"
        }
      }
    },
    
    "movieStats": {
      ".read": true,
      "$movieSlug": {
        ".write": "auth != null"
      }
    },
    
    "comments": {
      "$movieSlug": {
        ".read": true,
        "$commentId": {
          ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
          ".validate": "newData.hasChildren(['userId', 'userName', 'content', 'createdAt'])"
        }
      }
    },
    
    "chat": {
      "$movieSlug": {
        ".read": true,
        "$messageId": {
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['userId', 'userName', 'message', 'createdAt'])"
        }
      }
    },
    
    "friends": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('friends').child(auth.uid).child($uid).exists()",
        ".write": "$uid === auth.uid || root.child('friends').child(auth.uid).child($uid).exists()"
      }
    },
    
    "friendRequests": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "auth != null",
        "$fromUid": {
          ".validate": "newData.hasChildren(['fromUserId', 'toUserId', 'status', 'createdAt'])"
        }
      }
    },
    
    "privateMessages": {
      "$chatId": {
        ".read": "auth != null && $chatId.contains(auth.uid)",
        ".write": "auth != null && $chatId.contains(auth.uid)",
        "$messageId": {
          ".validate": "newData.hasChildren(['chatId', 'senderId', 'receiverId', 'message', 'createdAt'])"
        }
      }
    },
    
    "userStatus": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['isOnline', 'lastSeen'])"
      }
    }
  }
}
