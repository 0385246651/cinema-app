{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "userStatus": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    },
    "friends": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "friendRequests": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "privateMessages": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$chatId": {
        ".indexOn": ["createdAt"]
      }
    },
    "favorites": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "watchHistory": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "ratings": {
      ".read": true,
      "$uid": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "comments": {
      ".read": true,
      "$movieId": {
        ".indexOn": ["createdAt"],
        "$commentId": {
          ".write": "auth != null"
        }
      }
    },
    "chat": {
      ".read": true,
      ".write": "auth != null",
      "$movieId": {
        ".indexOn": ["createdAt"]
      }
    },
    "movieStats": {
      ".read": true,
      "$movieId": {
        ".write": "auth != null"
      }
    }
  }
}
